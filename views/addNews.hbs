<h1>Add News</h1>

<form method="POST" action="/news/add">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Img url</label>
        <span class="helper-text" data-error="Enter url"></span>
    </div>
    <div class="input-field col s12">
        <textarea id="description" name="description" class="materialize-textarea" data-length="600" required></textarea>
        <label for="description">Description</label>
        <span class="helper-text" data-error="Enter description"></span>
    </div>

    <button class="btn btn-primary">Add news</button>
</form>