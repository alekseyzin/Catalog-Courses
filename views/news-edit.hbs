<h1>Edit News</h1>

<form method="POST" action="/news/edit">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{newsCard.title}}" required>
        <label for="title">News name</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{newsCard.img}}" required>
        <label for="img">Img url</label>
        <span class="helper-text" data-error="Enter url"></span>
    </div>
    <div class="input-field col s12">
        <textarea id="description" name="description" class="materialize-textarea" 
            data-length="600" required>{{newsCard.description}}</textarea>
        <label for="description">Description</label>
        <span class="helper-text" data-error="Enter description"></span>
    </div>
    <input type="hidden" name="id" value="{{newsCard.id}}">
    <button class="btn btn-primary">Edit news</button>
</form>